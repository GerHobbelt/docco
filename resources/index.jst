<!DOCTYPE html>

<html>
<head>
  <title><%= title %></title>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <link rel="stylesheet" media="all" href="<%= css %>" />
</head>
<body>
  <div id="container" class="file-index">
    <h1><%= title %></h1>
    <ul class="file-list">
      <% var ss = sources.sort(function(a, b){if(path.basename(a) < path.basename(b)){ return -1; }
                                              if(path.basename(b) < path.basename(a)){ return 1; }
                                              return 0;}); %>
      <% for (var i=0, l=sources.length; i<l; i++) { %>
      <% var source = ss[i]; %>
      <li>
        <a class="generated-file" href="<%= path.basename(destination(source)) %>">
          <p class="source-file"><%= path.basename(source) %></p>
          <p class="doc-file"><%= path.basename(destination(source)) %></p>
        </a>
      </li>
      <% } %>
    </ul>
  </div>
</body>
</html>